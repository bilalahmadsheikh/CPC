# ===========================================
# WhatsApp Bot Environment Variables
# Copy this to .env for local development
# In Railway, set these in the Variables tab
# ===========================================

# WhatsApp Cloud API (from Meta Developer Portal)
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=cpc
WHATSAPP_APP_SECRET=your_app_secret_here  # Optional but recommended for webhook security

# Supabase (from Project Settings > API)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW_SECONDS=60

# App Settings
ENVIRONMENT=production
DEBUG=false
PORT=8000
